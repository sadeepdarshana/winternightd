<com.example.sadeep.winternightd.temp.XRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:background="#00d9dfd9"
    >
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/notebook_space"
        android:layout_alignParentBottom="true"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipChildren="false"
        android:clipToPadding="false" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottombar_space"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">
    </LinearLayout>
</com.example.sadeep.winternightd.temp.XRelativeLayout>