<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"

    android:layout_margin="0dp"
    android:padding="0dp"

    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="0dp"
        android:padding="0dp"

        android:background="#00000000"

        android:clipChildren="false"

        android:id="@+id/upperLL"

        >

        <com.example.sadeep.winternightd.buttons.customizedbuttons.AttachCircularButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_attach_file_white_24dp"


            android:padding="0dp"

            android:id="@+id/attach0"
            app:fabSize="mini"
            android:layout_gravity="center_vertical"
            app:elevation="3dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="3dp" />

        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"


            android:layout_margin="0dp"
            android:padding="0dp"
            />

        <com.example.sadeep.winternightd.buttons.customizedbuttons.SaveNoteCircularButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_white_18dp"


            android:padding="0dp"

            android:id="@+id/send0"
            app:fabSize="mini"
            android:layout_gravity="center_vertical"
            app:elevation="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="3dp"
            android:onClick="sendClick" />


    </LinearLayout>

    <View
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_gravity="center_vertical"
        android:background="#00aaaaaa" />
    <View
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_gravity="center_vertical"
        android:background="#00999999" />

    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"

        android:layout_margin="0dp"
        android:padding="0dp"

        android:id="@+id/bottomLL"

        android:background="#ffffff">

        <com.example.sadeep.winternightd.buttons.customizedbuttons.AttachButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_attach_file_white_24dp"
            android:id="@+id/attach1"
            android:layout_gravity="center_vertical"

            android:layout_margin="0dp"
            android:padding="13dp"
            />

        <ScrollView
            android:id="@+id/notescroll"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

        </ScrollView>

        <com.example.sadeep.winternightd.buttons.customizedbuttons.SaveNoteCircularButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_white_18dp"


            android:padding="0dp"

            android:id="@+id/send1"
            app:fabSize="mini"
            android:layout_gravity="center_vertical"
            app:elevation="0dp"
            android:layout_marginRight="5dp"
            android:onClick="sendClick" />


    </LinearLayout>

</LinearLayout>
